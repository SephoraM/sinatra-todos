<ul id="lists">
  <% sorted_with_original_index(@lists) do |list, index| %>
    <li class="<%= classify_complete_list(list) %>">
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= todos_remaining_count(list) %>/<%= todos_size(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="lists/new" class="add">New List</a>
<% end %>
